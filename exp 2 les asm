2A- LED BLINKING USING REGISTER DELAY

	ORG 0000H
	MOV A, #0FFH
BACK: MOV P3,A
	ACALL DELAY
	MOV A, #00H
	 MOV P3, A
	ACALL DELAY
	SJMP BACK

DELAY: MOV R0, #0C8H
HERE2:  MOV R1, #14H
HERE1: MOV R2, #0FDH
HERE: DJNZ R2 HERE
	 DJNZ R1 HERE1
	 DJNZ R0 HERE2

	  RET
	END






2B-LED COUNTER


ORG 0000H
	MOV A, #FFH
BACK: MOV P3,A
	ACALL DELAY
	DEC A
	SJMP BACK

DELAY: MOV R0, #0C8H
HERE2:  MOV R1, #14H
HERE1: MOV R2, #0FDH
HERE: DJNZ R2, HERE
	 DJNZ R1, HERE1
	 DJNZ R0, HERE2

	  RET
	END
