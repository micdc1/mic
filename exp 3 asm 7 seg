3-ALP for interfacing of 8051 with Seven Segment Display.

		ORG 0000H
START:	MOV R3, #16
		MOV DPTR, #3000H
BACK:	CLR A
		MOVC A,@A+DPTR
		MOV P2,A
		MOV P3, #7FH
		ACALL DELAY
		INC DPTR
		DJNZ R3,BACK
		SJMP START

DELAY:	MOV R0,#0C8H
HERE2:	MOV R1,#14H
HERE1:	MOV R2,#0FDH
HERE:		DJNZ R2,HERE
		DJNZ R1,HERE1
		DJNZ R0,HERE2
		RET

		ORG 3000H
DB 88H, 0EBH, 4CH, 49H, 2BH, 19H, 18H, 0CBH, 08H, 09H, 0AH, 38H, 9CH, 68H, 1CH, 1EH
		END
